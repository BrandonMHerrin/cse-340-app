<h1><%= title %></h1>

<%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<form action="/inv/add-classification" method="post" id="add-classification-form">
  <label
    >Classification Name <input
      type="text"
      name="classification_name"
      id="classificationName"
      pattern="[A-Za-z0-9]+"
      required
  />Name can't contain spaces or special characters.</label>
  <input type="submit" value="Add Classification" />
</form>
